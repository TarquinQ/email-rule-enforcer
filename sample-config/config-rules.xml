<?xml version="1.0" encoding="UTF-8"?>
<emailenforcer>
	<config_rules>
		<rule>
			<rule_name>Name of this rule</rule_name>
			<rule_actions>
				<!-- All Move or Forward operations will mark an email as read - this will move it without marking it -->
				<move_to_folder mark_as_read="no">Archived Items</move_to_folder>    <!-- Please provide full IMAP folder path, separated by '/' for nested folders -->
				<mark_as_read />   <!-- This will mark the email as read, regardless of current read-status -->
				<mark_as_unread />   <!-- This will mark the email as unread, regardless of current read-status -->
			</rule_actions>
			<rule_matches> <!-- all matches are required to match at the same time, unless added as an "match_or" -->
				<match_field field="to" type="contains">recipient@domain2</match_field>
				<match_or>
					<match_field field="from" type="contains">sender@domain1</match_field>
					<match_field field="body" type="ends_with">Undeliverable: </match_field>
				</match_or>
			</rule_matches>
			<rule_match_exceptions> <!-- Same matching format as rule_matches -->
				<match_or>
					<match_field field="subject" type="starts_with" case_sensitive="no">Undeliverable: </match_field>
					<match_field field="body" type="starts_with" case_sensitive="no">Undeliverable: </match_field>
					<match_field field="from" type="equals">mailerdaemon@spammydomain.com</match_field>
				</match_or>
			</rule_match_exceptions>
			<continue_rule_checks_if_matched>no</continue_rule_checks_if_matched> <!-- Optional; Default = yes -->
		</rule>
		<rule>
			<rule_name>Move Undeliverable Emails to Trash folder</rule_name>
			<rule_actions>
				<forward>
					<forward_to>forwardingaddr1@somewhere.com</forward_to>
					<forward_to>forwardingaddr2@somewhereelse.com</forward_to>
				</forward>
				<delete permanently="no" />  <!-- delete permanent=no moves the email into the Deleted Items/Trash folder as specified in config-serverinfo -->
				<!-- permanent=no is default -->
			</rule_actions>
			<rule_matches> <!-- all matches are required to match at the same time, unless added as an "match_or" -->
				<match_field field="subject" type="starts_with" case_sensitive="no">Undeliverable: </match_field>
			</rule_matches>
		</rule>
		<rule>
			<rule_name>Delete older emails Permanently</rule_name>
			<rule_actions>
				<delete permanently="yes" />  <!-- delete permanently=yes deletes the email permanently -->
			</rule_actions>
			<rule_matches>
				<match_date type="older_than">Now + 3 months</match_date>  <!-- Relative date -->
			</rule_matches>
		</rule>
		<rule>
			<rule_name>Default</rule_name>  <!-- Default rule - no matches, no exceptions -->
			<rule_actions>
				<move_to_folder>Archived Items</move_to_folder>  <!-- Please provide full IMAP folder path, separated by '/' for nested folders -->
			</rule_actions>
		</rule>
	</config_rules>
</emailenforcer>
